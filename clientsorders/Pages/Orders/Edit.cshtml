@page
@model ClientsOrders.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.Id" />
            <div class="form-group">
                <label asp-for="Order.Name" class="control-label"></label>
                <input asp-for="Order.Name" class="form-control" />
                <span asp-validation-for="Order.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.CreatedOn" class="control-label"></label>
                <input asp-for="Order.CreatedOn" type="datetime-local" class="form-control" />
                <span asp-validation-for="Order.CreatedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Status" class="control-label"></label>
                <select asp-for="Order.Status" class="form-control" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Order.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ClientId" class="control-label"></label>
                <select asp-for="Order.ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="Order.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
